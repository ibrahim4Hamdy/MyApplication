<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="20dp"
            android:padding="8dp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/numbers"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="20dp"
            android:padding="8dp"
            android:textColor="#949494"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_height_dp"
                android:minWidth="@dimen/button_width_dp"
                android:text="AC"
                android:gravity="center"
                android:background="@drawable/button2"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="Del"
                android:gravity="center"
                android:background="@drawable/button2"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="%"
                android:gravity="center"
                android:background="@drawable/button2"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/but_plus"
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="+"
                android:gravity="center"
                android:background="@drawable/button2"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/but_7"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="7"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/but_4"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="4"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/but_1"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="1"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/but_8"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="8"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/but_5"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="5"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/but_2"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="2"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/but_9"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="9"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/but_6"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="6"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/but_3"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="3"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/but_multi"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="x"
                    android:gravity="center"
                    android:background="@drawable/button2"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/but_minus"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="-"
                    android:gravity="center"
                    android:background="@drawable/button2"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/but_divide"
                    android:layout_width="@dimen/button_width_dp"
                    android:layout_height="@dimen/button_height_dp"
                    android:text="/"
                    android:gravity="center"
                    android:background="@drawable/button2"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="+/-"
                android:gravity="center"
                android:background="@drawable/button"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/but_0"
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/button"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="."
                android:gravity="center"
                android:background="@drawable/button"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/but_equals"
                android:layout_width="@dimen/button_width_dp"
                android:layout_height="@dimen/button_height_dp"
                android:text="="
                android:gravity="center"
                android:background="@drawable/button2"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>